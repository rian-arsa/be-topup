<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Np</th>
      <th>Nama</th>
      <th>Nama Bank</th>
      <th>Nomor Rekening</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for( let index = 0; index < banks.length; index++ ) { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= banks[index].name %></td>
      <td><%= banks[index].bankName %></td>
      <td><%= banks[index].noRekening %></td>
      <td>
        <form
          method="post"
          action="/bank/<%= banks[index]._id %>?method=DELETE"
        >
          <a
            href="/bank/<%= banks[index]._id %>/edit"
            class="btn btn-info btn-sm"
          >
            <i class="fas fa-pencil-alt"> Edit</i>
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"> Hapus</i>
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
