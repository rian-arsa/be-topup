<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Nama Game</th>
      <th>Kategori</th>
      <th>Nominal</th>
      <th>Status</th>
      <th>Gambar</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for( let index = 0; index < vouchers.length; index++ ) { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= vouchers[index].name %></td>
      <td><%= vouchers[index]?.category?.name ?? '-' %></td>
      <td>
        <% vouchers[index].nominals.forEach(element => { %>
        <span class="badge badge-warning"
          ><%= element.coinQuantity %> <%= element.coinName %> - <%=
          element.price %>
        </span>
        <% }) %>
      </td>
      <td>
        <% if (vouchers[index].status === 'Y') { %>
        <span class="badge badge-success">Aktif</span>
        <% } else { %>
        <span class="badge badge-danger">Non Aktif</span>
        <% } %>
      </td>
      <td>
        <img
          src="http://localhost:3000/uploads/<%= vouchers[index].thumbnail %>"
          alt=""
          width="48px"
          height="48px"
        />
      </td>
      <td>
        <form
          method="post"
          action="/voucher/<%= vouchers[index]._id %>?method=PUT"
          enctype="multipart/form-data"
          style="display: inline-block"
        >
          <input
            type="hidden"
            name="status"
            value="<% if (vouchers[index].status === 'Y') { %>N<% } else{ %>Y<% } %>"
          />
          <button class="btn btn-primary btn-sm">
            <i class="fas fa-folder">
              <% if (vouchers[index].status === 'Y') { %> Non Aktifkan <% } else
              { %> Aktifkan <% } %>
            </i>
          </button>
        </form>
        <form
          method="post"
          action="/voucher/<%= vouchers[index]._id %>?method=DELETE"
          style="display: inline-block"
        >
          <a
            href="/voucher/<%= vouchers[index]._id %>/edit"
            class="btn btn-info btn-sm"
          >
            <i class="fas fa-pencil-alt"> Edit</i>
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"> Hapus</i>
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
